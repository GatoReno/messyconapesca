<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqlieTest_x.PageNav">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="User"
            Activated="ToolbarItem_InfoUser"
            Icon="user.png"
            />

        <ToolbarItem
            Text="Isntrucciones"
            Activated="ToolbarItem_Instrucciones"
            Icon="gear.png"
            />
    </ContentPage.ToolbarItems>

        <StackLayout
            Margin="20,10,20,20">

            <Label Text="Welcome to Xamarin GeoLocator!"
                   x:Name="testx"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <ActivityIndicator x:Name="waitActIndicator"/>
            <Label x:Name="txtLat"/>
            <Label x:Name="txtLong"/>
            <Button Clicked="BtnGetLoc_Clickied"
                        Text="GetLocation"
                    x:Name="btnLoc"/>

        </StackLayout>
  
</ContentPage>